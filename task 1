from datetime import datetime
import random

print("ðŸ¤– Hello! I'm CodeHelper AI. Type 'exit' anytime to leave the chat.")

while True:
    user_query = input("You: ").strip().lower()

    if not user_query:
        continue  # Skip empty input

    if any(greet in user_query for greet in ["hello", "hi", "hey"]):
        print("CodeHelper: Hey there! How can I assist you today?")

    elif "your name" in user_query or "who are you" in user_query:
        print("CodeHelper: I'm CodeHelper â€” a simple Python-based assistant.")

    elif "how are you" in user_query:
        print("CodeHelper: I'm functioning as expected. Hope you're doing well too!")

    elif "weather" in user_query:
        print("CodeHelper: I'm not connected to weather data, but I hope itâ€™s nice where you are.")

    elif any(feeling in user_query for feeling in ["tired", "bored", "sleepy"]):
        print("CodeHelper: You might consider taking a short break or stretching. It helps stay refreshed.")

    elif "time" in user_query:
        current_time = datetime.now().strftime("%I:%M %p")
        print(f"CodeHelper: The current time is {current_time}.")

    elif "date" in user_query or "day" in user_query:
        today = datetime.now().strftime("%A, %B %d, %Y")
        print(f"CodeHelper: Today is {today}.")

    elif "joke" in user_query:
        jokes = [
            "Why did the programmer quit his job? Because he didn't get arrays (a raise).",
            "Why do Java developers wear glasses? Because they don't C#.",
            "What is a computerâ€™s favorite snack? Microchips!"
        ]
        print("CodeHelper:", random.choice(jokes))

    elif "programming" in user_query or "python" in user_query:
        print("CodeHelper: Python is a great language! You can ask me basic Python questions too.")

    elif "help" in user_query or "options" in user_query:
        print("CodeHelper: How can I assist you today?")

    elif user_query in ["bye", "exit", "quit"]:
        print("CodeHelper: Goodbye! Have a productive day ahead. ðŸ‘‹")
        break

    else:
        print("CodeHelper: I'm still learning. Could you try asking something else?")
